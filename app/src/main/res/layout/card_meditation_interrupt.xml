<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/shape_emotion_stresslevel_card_bg"
        >

    <LinearLayout
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <ImageView
                android:id="@+id/iv_error_icon"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:src="@drawable/vector_drawable_net_error"
                />

        <TextView
                android:id="@+id/tv_error_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/brainwaveLegendLeft"
                android:lineSpacingExtra="6sp"
                android:text="Network Error"
                android:layout_marginLeft="@dimen/dp_10"
                />
    </LinearLayout>

    <TextView
            android:id="@+id/tv_error_content"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/colorMeditationErrorText"
            android:lineSpacingExtra="7sp"
            android:text="The connection has timed out and analyse has suspendeed. Please check the connection and try to restore analyseã€‚"
            />

    <TextView
            android:clickable="true"
            android:id="@+id/btn_connect"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_gravity="center_horizontal"
            android:layout_width="194dp"
            android:layout_height="32dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/colorThemeBlue"
            android:textAllCaps="false"
            android:gravity="center"
            android:text="Connect"
            android:background="@drawable/shape_meditation_connect_bg"
            />

</LinearLayout>
