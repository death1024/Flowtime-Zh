<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/rl_title_bg"
        >

    <ImageView
            android:clickable="true"
            android:id="@+id/iv_back"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_back_colorful"
            />

    <TextView
            android:id="@+id/tv_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#232323"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            android:text=""
            />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_centerVertical="true"
            >


        <RelativeLayout
                android:clickable="true"
                android:id="@+id/rl_menu_ic"
                android:visibility="visible"
                android:layout_width="48dp"
                android:layout_height="48dp"
                >

            <ImageView
                    android:id="@+id/iv_menu_icon"
                    android:layout_centerInParent="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@mipmap/ic_device_white"
                    />
        </RelativeLayout>

        <TextView
                android:layout_marginLeft="@dimen/dp_4"
                android:id="@+id/tv_menu_text"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#4b5dcc"
                android:letterSpacing="0.01"
                android:gravity="end"
                android:text="Edit"
                />

    </LinearLayout>
</RelativeLayout>
